{
	"version": "0.1.0",
	"command": "hugo",
	"isShellCommand": true,
	"args": [
		"-wD",
		"server"
	],
	"showOutput": "always",
	"isWatching": true,
	"problemMatcher": [
		{
			"owner": "hugo",
			"fileLocation": ["relative", "${workspaceRoot}/themes/hugo-theme-html5/layouts/"],
			"severity": "error",
			"pattern": {
				"regexp": "^ERROR: .* template: theme\/(.*):([0-9]+):([0-9]+): executing .* at (.*)$",
				"file": 1,
				"line": 2,
				"column": 3,
				"message": 4
			},
			"watching": {
				"activeOnStart": true,
				"beginsPattern": "^Change detected, rebuilding site",
				"endsPattern": "^Built site for language"
			}
		},
		{
			"owner": "hugo",
			"fileLocation": ["relative", "${workspaceRoot}/themes/hugo-theme-html5/layouts/"],
			"severity": "error",
			"pattern": {
				"regexp": "^ERROR: .* theme\/(.*?) (.*)$",
				"file": 1,
				"message": 2
			},
			"watching": {
				"activeOnStart": true,
				"beginsPattern": "^Change detected, rebuilding site",
				"endsPattern": "^Built site for language"
			}
		}
	]
}